{
    "name": "norberttech/md-link-linter",
    "description": "Markdown link linter",
    "keywords": ["markdown", "link", "linter"],
    "type": "library",
    "require": {
        "php": "^7.3",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "cocur/slugify": "^3.2",
        "erusev/parsedown": "^1.7",
        "psr/log": "^1.1",
        "symfony/console": "^4|^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/phpstan": "^0.11.19"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Norbert Orzechowicz",
            "email": "norbert@orzechowicz.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "MDLinkLinter\\": "src/MDLinkLinter"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests"
        }
    },
    "bin": ["bin/mdlinklint"],
    "scripts": {
        "cs:php:fix": "php-cs-fixer fix",
        "test" : [
            "@test:markdown",
            "@test:php:cs",
            "phpunit --bootstrap vendor/autoload.php tests"
        ],
        "test:markdown": "bin/mdlinklint ./ --exclude=vendor --exclude=tests",
        "test:php:cs": [
            "phpstan analyse src tests bin --level 5",
            "php-cs-fixer fix -v --dry-run --using-cache=no"
        ]
    },
    "config": {
      "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
