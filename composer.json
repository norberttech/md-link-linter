{
    "name": "norzechowicz/md-link-linter",
    "description": "Markdown link linter",
    "keywords": ["markdown", "link", "linter"],
    "type": "library",
    "require": {
        "php": "^7.3",
        "ext-dom": "*",
        "symfony/console": "^4.3",
        "erusev/parsedown": "^1.7",
        "cocur/slugify": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Norbert Orzechowicz",
            "email": "norbert@orzechowicz.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "MDLinkLinter\\": "src/MDLinkLinter"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MDLinkLinter\\": "tests/MDLinkLinter"
        }
    },
    "bin": ["bin/mdlinklint"],
    "scripts": {
        "tests" : "phpunit --bootstrap vendor/autoload.php tests"
    }
}
